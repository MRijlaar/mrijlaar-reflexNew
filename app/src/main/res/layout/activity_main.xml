<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/abc_button_padding_horizontal_material"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="2" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/mainReacButtonString"
            android:id="@+id/ReacButton"
            android:background="@color/greenMain"
            android:textSize="@dimen/large_text"
            android:clickable="true"
            android:onClick="reflexButtonClick" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/mainBuzzButtonString"
            android:id="@+id/BuzzButton"
            android:layout_marginTop="16dp"
            android:background="@color/blueMain"
            android:textSize="@dimen/large_text"
            android:onClick="buzzButtonClick" />
    </LinearLayout>

</RelativeLayout>
